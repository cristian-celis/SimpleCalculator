<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora"
        android:textColor="@color/white"
        android:textSize="30dp"

        app:layout_constraintVertical_bias="0.091"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/one"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="@color/purple"
        android:text="1"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/two"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="#CCCCCC"
        android:text="2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@id/one"
        app:layout_constraintTop_toTopOf="@id/one" />

    <Button
        android:id="@+id/three"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="#CCCCCC"
        android:text="3"
        android:layout_marginStart="130dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@id/one"
        app:layout_constraintTop_toTopOf="@id/one" />
    <Button
        android:id="@+id/addBtt"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="#CCCCCC"
        android:text="+"
        android:layout_marginStart="230dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@id/one"
        app:layout_constraintTop_toTopOf="@id/one" />
    <Button
        android:id="@+id/four"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="#CCCCCC"
        android:text="4"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@id/one"
        app:layout_constraintTop_toBottomOf="@id/one" />
    <Button
        android:id="@+id/five"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="#CCCCCC"
        android:text="5"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf="@id/one"
        app:layout_constraintTop_toBottomOf="@id/one" />
    <Button
        android:id="@+id/six"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="#CCCCCC"
        android:text="6"
        android:layout_marginStart="130dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf="@id/one"
        app:layout_constraintTop_toBottomOf="@id/one" />
    <Button
        android:id="@+id/subsBtt"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="#CCCCCC"
        android:text="-"
        android:layout_marginStart="230dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf="@id/one"
        app:layout_constraintTop_toBottomOf="@id/one" />
    <Button
        android:id="@+id/seven"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="#CCCCCC"
        android:text="7"
        android:layout_marginStart="0dp"
        android:layout_marginTop="120dp"
        app:layout_constraintLeft_toLeftOf="@id/one"
        app:layout_constraintTop_toBottomOf="@id/one" />
    <Button
        android:id="@+id/eight"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="#CCCCCC"
        android:text="8"
        android:layout_marginStart="30dp"
        android:layout_marginTop="120dp"
        app:layout_constraintLeft_toRightOf="@id/one"
        app:layout_constraintTop_toBottomOf="@id/one" />
    <Button
        android:id="@+id/nine"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="#CCCCCC"
        android:text="9"
        android:layout_marginStart="130dp"
        android:layout_marginTop="120dp"
        app:layout_constraintLeft_toRightOf="@id/one"
        app:layout_constraintTop_toBottomOf="@id/one" />
    <Button
        android:id="@+id/multiBtt"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="#CCCCCC"
        android:text="*"
        android:layout_marginStart="230dp"
        android:layout_marginTop="120dp"
        app:layout_constraintLeft_toRightOf="@id/one"
        app:layout_constraintTop_toBottomOf="@id/one" />
    <Button
        android:id="@+id/zero"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="#CCCCCC"
        android:text="0"
        android:layout_marginStart="0dp"
        android:layout_marginTop="210dp"
        app:layout_constraintLeft_toLeftOf="@id/one"
        app:layout_constraintTop_toBottomOf="@id/one" />

    <Button
        android:id="@+id/point"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="#CCCCCC"
        android:text="."
        android:layout_marginStart="30dp"
        android:layout_marginTop="210dp"
        app:layout_constraintLeft_toRightOf="@id/one"
        app:layout_constraintTop_toBottomOf="@id/one" />
    <Button
        android:id="@+id/equalsBtt"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="#CCCCCC"
        android:text="="
        android:layout_marginStart="130dp"
        android:layout_marginTop="210dp"
        app:layout_constraintLeft_toRightOf="@id/one"
        app:layout_constraintTop_toBottomOf="@id/one" />
    <Button
        android:id="@+id/divideBtt"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="#CCCCCC"
        android:text="/"
        android:layout_marginStart="230dp"
        android:layout_marginTop="210dp"
        app:layout_constraintLeft_toRightOf="@id/one"
        app:layout_constraintTop_toBottomOf="@id/one" />

    <TextView
        android:id="@+id/numbers"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#808080"
        android:textColor="@color/black"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/calculator"
        app:layout_constraintBottom_toTopOf="@+id/one"/>

    <Button
        android:id="@+id/trashBtt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/trash"
        android:contentDescription="trash_Btt"
        android:layout_margin="10dp"
        app:layout_constraintRight_toRightOf="@id/numbers"
        app:layout_constraintTop_toTopOf="@id/numbers"/>

</androidx.constraintlayout.widget.ConstraintLayout>